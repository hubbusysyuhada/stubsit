{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "typeRoots": [
      "./@types",
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "build"
  },
  "include": [
    "index.ts",
    "routes/**/*.ts",
    "supabase/**/*.ts",
    "@types/**/*.d.ts"
  ],
  "files": [
    "./@types/fastify.d.ts"
  ]
}